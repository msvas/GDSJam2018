script/source = "extends KinematicBody2D

export var speed = 300
export var threshold = 5

onready var navigation = get_node(\"../Navigation\")

var path = PoolVector2Array()

func _ready():
	update_path()
	$timer.wait_time = rand_range(1, 5)
	$timer.connect(\"timeout\", self, \"update_path\")

func _process(delta):
	# walk along path
	if path.size() > 0:
		var distance = (path[0] - position).length()
		var direction = (path[0] - position).normalized()
		move_and_slide(direction * speed)
		
		if distance <= threshold:
			path.remove(0)
	elif $timer.is_stopped():
		$timer.wait_time = rand_range(1, 5)
		$timer.start()

func update_path():
	var rect = get_viewport_rect()
	var point = Vector2()
	
	point.x = rand_range(rect.position.x, rect.end.x)
	point.y = rand_range(rect.position.y, rect.end.y)
	
	path = navigation.get_simple_path(position, point)
"

